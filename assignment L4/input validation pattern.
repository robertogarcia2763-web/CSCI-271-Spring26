#include <iostream>

using namespace std;

int main(){
    int age;
    cout << "Enter age (1-120): ";
    cin >> age;

    // this loop only runs if the data is bad
    while (age < 1 || age > 120){
        cout << "Invalid age. Please enter a valid age (1-120): ";
        cin >> age;
    }
}

