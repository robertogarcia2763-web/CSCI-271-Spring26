Program: Sentinal Implementation.
Description: adds up grades until -1 is entered and calculates the average.
*/

#include <iostream> 

using namespace std;

int main() {
    int total = 0, counter = 0, grade;
    cout << "enter grade. if you want to quit, enter -1" << endl;
    cin >> grade;

    while (grade != -1) {
        total += grade;
        counter++;

        cout << "enter grade. if you want to quit, enter -1" << endl;
        cin >> grade;
    }

    if (counter != 0) {
        double average = static_cast<double>(total) / counter;
        cout << "Class average is: " << average;

    } else {
        cout << "No grades were entered." << endl;
    }
}

